<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="42dp">


    <RelativeLayout
        android:id="@+id/message_gifts_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/message_item_gifts_count_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />


        <ImageView

            android:id="@+id/message_item_gifts_image_right"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_toRightOf="@id/message_item_gifts_count_right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/message_gifts_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送给她一个"
            android:textColor="#16181B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_item_gifts_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXX"
            android:textColor="@color/pinkLipstickColor" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/message_gifts_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/message_item_gifts_image_left"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />

        <LinearLayout
            android:id="@+id/message_item_gifts_count_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/message_item_gifts_image_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" />


    </RelativeLayout>

</LinearLayout>