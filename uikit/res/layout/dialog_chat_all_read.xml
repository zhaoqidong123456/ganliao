<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/shape_all_read_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="一键已读"
        android:textColor="#1C1E1F"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="确定将所有消息设为已读状态吗？"
        android:textColor="#BEBEBE" />

    <LinearLayout
        android:layout_marginBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/all_read_cancel"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/shape_read_cancel"
            android:textColor="#EF709D" />

        <TextView
            android:id="@+id/all_read_ok"
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_all_read"
            android:gravity="center"
            android:text="挂断"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>