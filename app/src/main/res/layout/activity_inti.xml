<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.zaodong.social.activity.IntiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:id="@+id/mInit_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#00000000"
            android:src="@mipmap/main_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="亲密榜"
            android:textColor="#ff1e2122"
            android:textSize="16sp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mInit_recy"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/mInto_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/home_follow_img_empty"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:text="暂时没有数据"
            android:textColor="#ffb8b8b8"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>