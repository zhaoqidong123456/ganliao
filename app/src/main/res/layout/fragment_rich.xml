<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zaodong.social.fragment.main.rank.RichFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/a"
        android:background="@drawable/rank_jianbian"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_marginTop="-163dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignBottom="@+id/a"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ranking_img_podium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="190dp" />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="-300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ranking_img_crowna_two"
                    android:layout_width="72dp"
                    android:layout_height="89dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/mRich_ya"
                    android:layout_width="68dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="14dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/mRich_ya_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="昵称"
                android:maxEms="3"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/mRich_ya_counts"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="205dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ranking_img_crowna_one"
                    android:layout_width="72dp"
                    android:layout_height="89dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/mRich_guan"
                    android:layout_width="68dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="14dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="昵称"
                android:maxEms="4"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/mRich_guan_name"
                android:textColor="#ffffffff"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="0"
                android:id="@+id/mRich_guan_counts"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="179dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ranking_img_crowna_three"
                    android:layout_width="72dp"
                    android:layout_height="89dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/mRich_ji"
                    android:layout_width="68dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="14dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:maxEms="4"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/mRich_ji_name"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/mRich_ji_counts"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@drawable/banyuan"
        android:layout_marginTop="70dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mRich_recy"/>
    </LinearLayout>
</LinearLayout>