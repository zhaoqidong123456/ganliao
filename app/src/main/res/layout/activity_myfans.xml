<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.zaodong.social.activity.MyfansActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:id="@+id/mAtt_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#00000000"
            android:src="@mipmap/main_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>
        <com.zaodong.social.utils.ModifyTabLayout
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/mAtt_tablayout"/>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mAtt_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>