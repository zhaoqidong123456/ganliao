<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_solution_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_solution_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:clickable="false"
                android:src="@mipmap/nav_icon_home_c" />

            <TextView
                android:id="@+id/tab_solution_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:text="首页"
                android:textColor="#adadad"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_service_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_service_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:clickable="false"
                android:src="@mipmap/nav_icon_ranking_h" />

            <TextView
                android:id="@+id/tab_service_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:text="排行榜"
                android:textColor="#adadad"

                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_aspect_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_aspect_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:clickable="false"
                android:src="@mipmap/nav_icon_video" />

            <TextView
                android:id="@+id/tab_aspect_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:text="视频秀"
                android:textColor="#adadad"

                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_appliance_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_appliance_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:clickable="false"
                android:src="@mipmap/nav_icon_news" />

            <TextView
                android:id="@+id/tab_appliance_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:text="消息"
                android:textColor="#adadad"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_my_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_my_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:clickable="false"
                android:src="@mipmap/nav_icon_my" />

            <TextView
                android:id="@+id/tab_my_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="#adadad"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
