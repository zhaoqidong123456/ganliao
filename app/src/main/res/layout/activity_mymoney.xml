<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.zaodong.social.activity.MymoneyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#00000000"
            android:src="@mipmap/main_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:id="@+id/mMymoney_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="我的钱包"
            android:textColor="#ff1e2122"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:text="明细"
            android:textColor="#ff1e2122"
            android:textSize="12sp"
            android:id="@+id/mMymoney_mingxi"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mMoney_youjia"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <com.zaodong.social.utils.AutoPollRecyclerView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/mPao_recy"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@mipmap/money_yu"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包余额"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffffff"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:id="@+id/mMoney_yu"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mMoney_recy">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:id="@+id/mMoney_chongzhi"
        android:text="立即充值"
        android:gravity="center"
        android:background="@drawable/chongzhi"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
</LinearLayout>