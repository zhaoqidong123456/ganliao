<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context="com.zaodong.social.activity.VipActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:background="@drawable/vip_item_back">
                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageButton
                        android:id="@+id/mVip_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#00000000"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/main_back_bai"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员中心"
                        android:textColor="#ffffff"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="16sp" />
                </RelativeLayout>
                <com.zaodong.social.utils.AutoPollRecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:id="@+id/mVip_recy_pao"/>
                <LinearLayout
                    android:background="@drawable/vip_kai"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/mVip_icon"/>
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mVip_tishi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您正在享受超级VIP专属特权"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"/>
                        <TextView

                            android:id="@+id/mVip_xifei_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020/03/03到期"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:orientation="vertical"
                android:background="@drawable/recy_back"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:id="@+id/mVip_recy">
                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:textColor="#ffffff"
                    android:text="立即开通"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/chongzhi"
                    android:id="@+id/mVip_liji"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:layout_height="17dp"
                    android:text="SVIP为身份权限，与主播通话需消费钻石"
                    android:textColor="#ff3c3f52"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="22dp"
                android:text="超级会员特权"
                android:textColor="#ff1c1e1f"
                android:textSize="16sp"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="112dp"
                    android:layout_height="96dp"
                    android:background="@drawable/recy_back"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_marginTop="-131dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/sixin"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费私信"
                    android:textColor="#ffffab72"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-15dp"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:text="私聊免费"
                    android:textColor="#ff717171"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="让爱不再克制"
                    android:textColor="#ff717171"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="112dp"
                    android:layout_height="96dp"
                    android:background="@drawable/recy_back"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_marginTop="-131dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/zhuanshugift"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专属礼物"
                    android:textColor="#ff9259ff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="特殊的礼物"
                    android:textColor="#ff717171"
                    android:textSize="10sp" />
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="让她只记住你"
                    android:textColor="#ff717171"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="112dp"
                    android:layout_height="96dp"
                    android:background="@drawable/recy_back"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_marginTop="-131dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/shangxian"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上线特效"
                    android:textColor="#ff73befa"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-15dp"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:text="酷炫上线特效"
                    android:textColor="#ff717171"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="牢牢吸引女神"
                    android:textColor="#ff717171"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <View
                        android:layout_marginTop="20dp"
                        android:layout_width="112dp"
                        android:layout_height="96dp"
                        android:background="@drawable/recy_back"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_marginTop="-130dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/svip_two"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开通滚动通知"
                        android:textColor="#fffa7272"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-15dp"/>
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:text="不一般的你"
                        android:textColor="#ff717171"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="就该闪耀登场"
                        android:textColor="#ff717171"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <View
                        android:layout_marginTop="20dp"
                        android:layout_width="112dp"
                        android:layout_height="96dp"
                        android:background="@drawable/recy_back"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_marginTop="-131dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/svipte"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="超级SVIP特效"
                        android:textColor="#fff9659b"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-15dp"/>
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:text="更加酷炫的"
                        android:textColor="#ff717171"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特效展示"
                        android:textColor="#ff717171"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <View
                        android:layout_marginTop="20dp"
                        android:layout_width="112dp"
                        android:layout_height="96dp"
                        android:background="@drawable/recy_back"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_marginTop="-131dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/piao"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="漂流瓶次数提升"
                        android:textColor="#ffe574f3"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-15dp"/>
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:text="寻找此刻正在"
                        android:textColor="#ff717171"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="寂寞的她"
                        android:textColor="#ff717171"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>