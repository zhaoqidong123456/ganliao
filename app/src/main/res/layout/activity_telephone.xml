<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.zaodong.social.activity.TelephoneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#00000000"
            android:src="@mipmap/main_back"
            android:id="@+id/mTele_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="通话记录"
            android:textColor="#ff1e2122"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/mTele_rg"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mTele_rb1"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tele_item"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="未接通"
            android:textColor="@drawable/ziti_item" />
        <View
            android:layout_width="10dp"
            android:layout_height="1dp"/>
        <RadioButton
            android:id="@+id/mTele_rb2"
            android:text="已接通"
            android:textColor="@drawable/ziti_item"
            android:gravity="center"
            android:background="@drawable/tele_item"
            android:layout_gravity="center_vertical"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:button="@null"/>
    </RadioGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mTele_frame"/>
</LinearLayout>