<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.zaodong.social.activity.presonal.ShouruActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/shouru_item">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageButton
                android:id="@+id/mShou_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/main_back_bai"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收入"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="收入余额"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/mShou_yu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"/>
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/mTele_false_wu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@mipmap/wu"
                android:layout_gravity="center"
                android:layout_marginTop="130dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="暂时还没有记录～"
                android:textColor="#ffb8b8b8"
                android:textSize="12sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/mShou_recy">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>