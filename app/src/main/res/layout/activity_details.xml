<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.zaodong.social.activity.start.DetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.zaodong.social.utils.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.youth.banner.Banner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/mDetails_banner">
                    </com.youth.banner.Banner>
                    <ImageButton
                        android:id="@+id/mDetails_back"
                        android:src="@mipmap/back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="50dp"
                        android:background="#00000000"/>
                    <TextView
                        android:id="@+id/mDetails_state"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:text="空闲"
                        android:gravity="center"
                        android:background="@drawable/kongxian"
                        android:layout_width="45dp"
                        android:layout_height="17dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        tools:ignore="RtlCompat"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"/>
                </com.zaodong.social.utils.SquareLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/mDetails_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="网名"
                        android:textStyle="bold"/>
                    <TextView
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:background="@mipmap/level"
                        android:id="@+id/mDetails_lever"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="9dp"
                        android:textColor="#ffffff"
                        android:paddingLeft="17dp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="12dp"
                        android:text="500蛋/分钟"
                        android:textColor="#ffef709d"
                        android:textSize="15sp"
                        android:id="@+id/mDetails_piece"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/mDetails_guan_counts"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ACA9A9"
                    android:textSize="12sp"
                    android:text="1272关注 · 134粉丝"/>
                <com.zaodong.social.utils.ModifyTabLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/mDetails_tablayout"
                    android:layout_gravity="start"
                    android:layout_marginLeft="12dp"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/mDetails_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">
                </androidx.viewpager.widget.ViewPager>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/juxing"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/mDetails_niu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/mDetails_guanzhu"
                        android:scaleType="centerCrop"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="#00000000"
                        android:src="@mipmap/details_follow"/>
                    <ImageView
                        android:id="@+id/mDetails_chat"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="#00000000"
                        android:src="@mipmap/details_news"/>
                    <ImageView
                        android:id="@+id/mDetails_gift"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="#00000000"
                        android:src="@mipmap/details_gift"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/mDetails_phone"
                        android:layout_marginRight="12dp"
                        android:layout_width="189dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="#00000000"
                        android:src="@mipmap/details_but"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <com.opensource.svgaplayer.SVGAImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mSVGAKninghtood"
        android:background="#00000000"
        app:autoPlay="true"
        android:layout_marginTop="-100dp"
        app:clearsAfterStop="true"
        app:loopCount="1"
        android:visibility="gone"/>
</RelativeLayout>