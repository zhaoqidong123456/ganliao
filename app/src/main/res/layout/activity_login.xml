<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaodong.social.activity.login.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@mipmap/login_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:background="#00000000"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ziti"
            android:layout_marginBottom="100dp"/>
        <EditText
            android:id="@+id/mLogin_phone"
            android:maxLength="11"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:hint="请输入手机号"
            android:text=""
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:background="@drawable/changtiao"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <EditText
                android:text=""
                android:id="@+id/mLogin_yzm"
                android:layout_gravity="center_vertical"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:hint="请输入验证码"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:background="@drawable/changtiao"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/mLogin_hyzm"
                android:layout_gravity="center_vertical"
                    android:layout_width="126dp"
                    android:layout_height="48dp"
                android:textSize="14sp"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="#EF709D"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/neiqian"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mLogin_login"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/neiqian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/phone"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:layout_gravity="center"
                android:textColor="#ffef709d"
                android:textSize="16sp"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即表示同意本软件"
                android:textColor="#ffffff"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/mLogin_yong_xie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="#FFC107"/>
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="及"
                android:textColor="#ffffff"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/mLogin_yin_xie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私协议》"
                android:textColor="#FFC107"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>