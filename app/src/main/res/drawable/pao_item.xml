<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="201dp" android:height="38dp">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#fff7a3c6" android:endColor="#F18CB0" android:angle="180" />
            <corners android:radius="22dp" />
            <item name="android:shadowColor" tools:ignore="MissingPrefix">#33000000</item>
            <item name="android:shadowDx" tools:ignore="MissingPrefix">0</item>
            <item name="android:shadowDy" tools:ignore="MissingPrefix">2</item>
        </shape>
    </item>
</selector>